#Google assistant enabler
/system/xbin/busybox clear
/system/xbin/busybox echo "Enabling."
/system/xbin/busybox sleep 1
/system/xbin/busybox clear
/system/xbin/busybox echo "Enabling.."
/system/xbin/busybox sleep 1
/system/xbin/busybox clear
/system/xbin/busybox echo "Enabling..."
/system/xbin/busybox sleep 1
/system/xbin/busybox clear

/system/etc/resourceIB/setprop ro.opa.eligible_device true
/system/xbin/busybox echo "Google Assistant enabled suucessfully"
/system/xbin/busybox sleep 1
/system/xbin/busybox echo "Please reboot to see changes"
/system/xbin/busybox sleep 1
/system/xbin/busybox echo 'If not select the "force" method in control panel'

mount -o remount,ro -t auto / >> $LOG 2>> $LOG
mount -t rootfs -o remount,ro rootfs >> $LOG 2>> $LOG
mount -o remount,ro -t auto /system >> $LOG 2>> $LOG
mount -o remount,rw /data >> $LOG 2>> $LOG
mount -o remount,rw /cache >> $LOG 2>> $LOG